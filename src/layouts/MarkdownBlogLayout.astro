---
import HomeLayout from "./HomeLayout.astro";
import HeaderBlog from "../components/HeaderBlog.astro";
const { frontmatter } = Astro.props;
---

<HomeLayout pageTitle={frontmatter.title}>
  <main id='home' class='home-body'>
    <HeaderBlog />
    <section class='blog-content h-full'>
      <div class='flex flex-col gap-2'>
        <h3 class='capitalize'>{frontmatter.title}</h3>
        <div class='flex flex-row gap-2'>
          <p>{frontmatter.pubDate}</p>
          <p>â€¢</p>
          <p>By {frontmatter.author}</p>
        </div>
      </div>
      <slot />
      <div class='tags'>
        <p class='tag'>Design</p>
      </div>
    </section>
  </main>
</HomeLayout>
