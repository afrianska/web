---
import HomeLayout from "../layouts/HomeLayout.astro";
import CardFAQ from "../components/CardFAQ.astro";
import BlogPostHome from "../components/BlogPostHome.astro";

import globeIcon from "/svg/disabled/globe.svg?raw";
import phoneIcon from "/svg/disabled/smartphone.svg?raw";
import monitorIcon from "/svg/disabled/monitor.svg?raw";
import bagIcon from "/svg/disabled/briefcase.svg?raw";
import fileIcon from "/svg/disabled/scroll-text.svg?raw";
import cvIcon from "/svg/file-text.svg?raw";
import dribbbleIcon from "/svg/dribbble.svg?raw";
import githubIcon from "/svg/github.svg?raw";
import linkedinIcon from "/svg/linkedin.svg?raw";
import twitterIcon from "/svg/twitter.svg?raw";
import instagramIcon from "/svg/instagram.svg?raw";

import designSparkLogo from "/logo/design-spark.svg?raw";

const allPosts = await Astro.glob("./blog/*.md");
const sortedPosts = allPosts
  .sort((a, b) => {
    return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
  })
  .slice(0, 4);
---

<HomeLayout pageTitle='Afrian EP: Design And Develop Your Web And Mobila App.'>
  <main id='home' class='home-body'>
    <section class='hero'>
      <div class='welcome'>
        <div class='avatar'>
          <img src='/avatar.png' alt='afrian photo' />
        </div>
        <div class='greetings'>
          <h1>Hi, I'm <span class='font-bold'>Afrian EP</span></h1>
          <h3>A designer who write code.</h3>
        </div>
      </div>
      <div class='links'>
        <div class='links-left'>
          <a class='btn-icon' href='https://dribbble.com/afrianska' target='_blank'>
            <Fragment set:html={dribbbleIcon} />
          </a>
          <a class='btn-icon' href='https://github.com/afrianska' target='_blank'>
            <Fragment set:html={githubIcon} />
          </a>
          <a class='btn-icon' href='https://www.linkedin.com/in/afrian/' target='_blank'>
            <Fragment set:html={linkedinIcon} />
          </a>
          <a class='btn-icon' href='https://x.com/afrianska' target='_blank'>
            <Fragment set:html={twitterIcon} />
          </a>
          <a class='btn-icon' href='https://www.instagram.com/afrianep/' target='_blank'>
            <Fragment set:html={instagramIcon} />
          </a>
        </div>
        <div class='links-right'>
          <a class='btn-icon-text' href='/afrian-resume.pdf' target='_blank'>
            <span>Resume</span>
